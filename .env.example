# Application Configuration
APP_NAME="TreeHouse Framework"
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=treehouse
DB_USERNAME=root
DB_PASSWORD=

# Cache Configuration
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600

# Security Keys (Generate new ones for production)
APP_KEY=base64:your-32-character-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (if implemented)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

# View Configuration
VIEW_CACHE_ENABLED=true

# Authentication Configuration
AUTH_GUARD=web
AUTH_DEFAULT_ROLE=member
AUTH_USER_PROVIDER=\LengthOfRope\TreeHouse\Models\User
AUTH_TABLE=users
AUTH_PASSWORD_RESET_TABLE=password_resets
AUTH_PASSWORD_RESET_EXPIRE=60

# JWT Authentication Configuration
JWT_SECRET=your-jwt-secret-key-here-32-characters-minimum
JWT_ALGORITHM=HS256
JWT_TTL=900
JWT_REFRESH_TTL=1209600
JWT_ISSUER="TreeHouse Framework"
JWT_AUDIENCE=http://localhost:8000
JWT_LEEWAY=0

# JWT Refresh Token Configuration (Phase 4)
JWT_REFRESH_ROTATION=true
JWT_FAMILY_TRACKING=true
JWT_MAX_REFRESH_COUNT=50
JWT_REFRESH_GRACE_PERIOD=300

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug